# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  spdlog_config = debug
  actman_config = debug
endif
ifeq ($(config),release)
  spdlog_config = release
  actman_config = release
endif

PROJECTS := spdlog actman

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

spdlog:
ifneq (,$(spdlog_config))
	@echo "==== Building spdlog ($(spdlog_config)) ===="
	@${MAKE} --no-print-directory -C deps/spdlog -f Makefile config=$(spdlog_config)
endif

actman: spdlog
ifneq (,$(actman_config))
	@echo "==== Building actman ($(actman_config)) ===="
	@${MAKE} --no-print-directory -C . -f actman.make config=$(actman_config)
endif

clean:
	@${MAKE} --no-print-directory -C deps/spdlog -f Makefile clean
	@${MAKE} --no-print-directory -C . -f actman.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   spdlog"
	@echo "   actman"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"